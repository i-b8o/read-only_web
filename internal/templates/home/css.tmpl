{{define "css" -}}
#home-nav {
    margin: 0;
}

#home-nav > ul {
    display: flex;
}

#home-nav > ul > li {
    padding: 0;
    margin: 0;
}

.wrapper > div > .section {
    overflow-y: hidden;
}

#home-nav > ul > li > a {
    height: 70px;
    color: white;
    margin: 0;
    padding-right: 16px;
    padding-left: 16px;
    font-size: 14px;
    font-weight: 600;
    line-height: 20px;
    font-family: "Haas Grot Text R Web", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

#home-nav > ul > li > a:hover {
    color: #b9bec3;
}

#home-nav > ul > li > a {    
    -webkit-transition: color 200ms ease;
    transition: color 200ms ease;
    text-decoration: none;
}

#home-search-results-wrapper {
    display: none;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: flex-start;
}

#home-search-results-wrapper > a {
    color: rgba(59,69,78,1.00);
    border-bottom: 1px solid rgba(211,220,228,1.00);
    font-family: Helvetica,Arial,sans-serif;
    font-weight: 700;
    line-height: 40px;
}
#home-search-results-wrapper .search-select {
    color: rgb(52, 109, 219);
}

.cha, .par, .reg {
    padding: 0;
}

.search-container {
    height: auto;
}

#home-search-results-wrapper > a > div:first-of-type {
    font-size: 18px;
    margin-top: 24px;
    margin-bottom: 18px;
}

#home-search-results-wrapper > a > div:nth-of-type(2) {
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 12px;
}

#home-search-results-wrapper > a > div:nth-of-type(3) {
    font-size: 16px;
    line-height: 18px;
    font-weight: 400;
}

#home-search-pagination {
    display: flex;
    margin-right: 20vw;
    margin-top: 25px;
}

#pagination {
    display: flex;
    height: fit-content;
}

#pagination svg {
    width: 16px;
    height: 16px;
}

#pagination > a:last-child > svg {
    transform: rotate(180deg);
}

#pagination a {
    color: rgba(59,69,78,1.00);
    cursor: pointer;
    display: flex;
    align-items: center;
    padding: 5px 10px;
}

.arrow {
    border: solid black;
    border-width: 0 1px 1px 0;
    display: inline-block;
    padding: 3px;
}

.right {
    margin-left: 5px;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
}

.left {
    margin-right: 5px;
    transform: rotate(135deg);
    -webkit-transform: rotate(135deg);
}

.search-container {
    height: 100%;
    display:flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: 0;
    margin: 0;
}

.search-container .details {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    width: 100%;
    padding: 0 16px;
    text-align: center;
    position: relative;
    display: flex;
    justify-content: center;
}

.search-container .search-input-container {
    width: 100%;
    height: 64px;
    max-width: 628px;
    margin: 0 auto;
    transform: translateY(-50%);
    display: flex;
    position: absolute;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    -ms-flex-align: center;
    align-items: center;
    border-radius: 8px;
    background: #fff;
    -webkit-box-shadow: 0px 8px 20px rgb(0 0 0 / 6%);
    box-shadow: 0px 8px 20px rgb(0 0 0 / 6%);
    padding-left: 28px;
}

.search-input-container svg:nth-of-type(1) {
    width: 24px;
    height: 24px;
    color: #9e9ea7;
    fill: currentColor;
}

.search-input-container #dropdown svg {
    width: 14px;
    height: 14px;
    margin-right: 15px;
    color: #0d0c22;
    fill: currentColor;
    -webkit-transition: -webkit-transform 0.2s ease-in-out;
    transition: -webkit-transform 0.2s ease-in-out;
    transition: transform 0.2s ease-in-out;
    transition: transform 0.2s ease-in-out, -webkit-transform 0.2s
}

.search-input-container input {
    width: 100%;
    background: transparent;
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    border: 1px solid transparent;
    padding-left: 18px;    
    padding-right: 24px;
    cursor: zoom-out;
}
.search-input-container input::-webkit-search-cancel-button{
    width: 16px;
    height: 16px;
    opacity: 0.5;
    background: url(/static/images/close.svg) no-repeat;
    background-size: 100%;
    -webkit-appearance: none;
    appearance: none;
}

.search-input-container input:focus {
    outline: none;
}

.search-input-container .vertical-divider {
    width: 2px;
    height: 50%;
    background: #e7e7e9;
}

.search-input-container #dropdown {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    color: #0d0c22;
    margin-left: 25px;
    width: 195px;
    cursor: pointer;
}

.search-input-container .dropdown-text {
    margin-right: 36px;
    font-weight: 500;
    line-height: 20px;
}
#btn-dropdown-options {
    width: 100%;
    max-width: 628px;
    display: none;
    position: absolute;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    -ms-flex-align: center;
    align-items: center;
    margin: 0 auto;
    text-align: left;
    list-style: none;
    justify-content: flex-end;
    transform: translateY(20%);
    z-index: 2;
}

#btn-dropdown-options ul {
    width: 165px;
    font-size: 14px;
    font-weight: 400;
    line-height: 20px;
    border: 1px solid rgba(0,0,0,0.05);
    border-radius: 8px;
    background: #fff;
    -webkit-box-shadow: 0px 3px 5px rgb(0 0 0 / 4%);
    box-shadow: 0px 3px 5px rgb(0 0 0 / 4%);

}

#btn-dropdown-options li {
    list-style: none;
    padding: 16px 25px 16px 16px;
    cursor: pointer;
    color: #6e6d7a;
}

#btn-dropdown-options li:hover {
    background-color: #e7e7e9;
}


#btn-dropdown-options li.active {
    font-weight: 500;
    color: #56c1f2;
}

.background-bar {
    width: 100%;
    height: 80px;
    background: #f3f3f4;
}

.pagination-active {
    background: #f8f8fa;
    font-weight: 700;
    color: black;
    pointer-events: none;
}

@media only screen and (min-width: 821px) {
    section {
        overflow-y: hidden;
    }
    #home-search-results-wrapper {
        margin-left: 20vw;
        margin-bottom: 50px;
        margin-top: 250px;
    }
    #home-search-pagination {
        height: 250px;
        width: 60vw;
        justify-content: flex-end;
    }
    #home-search-results-wrapper > a {
        width: 60vw;
        padding-bottom: 32px;
    }
}

@media only screen and (max-width: 820px) {
    header {
        z-index: 1;
    }
    header a {
        width: inherit;
    }
    section {
        margin-top: 70px;
        overflow-y: inherit;
    }
    .search-container .search-input-container {
        width: 90vw;
    }
    .search-input-container svg:nth-of-type(1) {
        width: 40px;
        height: 40px;
    }
    #search {
        margin: 0;
    }    
    .svg {
        margin-right: 45px;
    }
    #home-search-results-wrapper {
        margin-left: 5vw;
        margin-top: 50px;
    }
    
    #home-search-pagination {
        width: 90vw;
        height: 60px;
        justify-content: center;
    }
    #home-search-results-wrapper > a {
        width: 90vw;
        padding-bottom: 20px;
    }
}
{{end}}